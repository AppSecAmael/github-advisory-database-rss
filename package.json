{
  "name": "github-advisory-database-rss",
  "version": "1.0.0",
  "description": "GitHub Advisory Database RSS Feeds.",
  "keywords": [
    "github",
    "security",
    "rss"
  ],
  "homepage": "https://github.com/azu/github-advisory-database-rss",
  "bugs": {
    "url": "https://github.com/azu/github-advisory-database-rss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/github-advisory-database-rss.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "main": "lib/github-advisory-database-rss.js",
  "module": "module/github-advisory-database-rss.js",
  "types": "lib/github-advisory-database-rss.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module/",
    "src/"
  ],
  "scripts": {
    "main": "ts-node-transpile-only src/generate-rss.ts",
    "build": "tsc -p .",
    "clean": "rimraf lib/ module/",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "npm run clean && npm run build",
    "watch": "tsc -p . --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.10",
    "lint-staged": "^12.2.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@octokit/graphql": "^4.8.0",
    "@octokit/graphql-schema": "^10.73.0",
    "@types/xml": "^1.0.8",
    "dayjs": "^1.10.7",
    "feed": "^4.2.2",
    "markdown-function": "^1.1.1",
    "safe-marked": "^10.0.0",
    "xml": "^1.0.1"
  }
}
